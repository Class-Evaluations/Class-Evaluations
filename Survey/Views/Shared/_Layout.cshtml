<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <center><img src="../../Content/Images/evaluationsLogo.jpg" width="228" height="70" /></center>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
        @if (User.IsInRole("Admin"))
        {
            <div id="menucontainer" style=" vertical-align">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Surveys", "Index", "Survey")</li>
                    <li>@Html.ActionLink("Question Bank", "Index", "Questions")</li>
                    <li>@Html.ActionLink("Courses", "Index", "Course")</li>
                    <li>@Html.ActionLink("Reports", "Index", "Reports")</li>
                    <li>@Html.ActionLink("Manage Users", "Index", "Admin")</li>
                </ul>
            </div>
        }
        else
        {
            <div id="menucontainer" style=" vertical-align">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Courses", "Index", "Course")</li>
                    <li>@Html.ActionLink("Reports", "Index", "Reports")</li>
                </ul>
            </div>
        }
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">
            <center><img src="../../Content/Images/logo2.jpg" width="50" height="50" /></center><center> City of Raleigh - Parks and Recreation </center>
        </div>
    </div>
</body>
</html>
