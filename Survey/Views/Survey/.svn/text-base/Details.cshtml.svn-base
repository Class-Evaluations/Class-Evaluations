@model  IEnumerable<Survey.Models.BuildSurvey_Result>
     

@using (Html.BeginForm())
{
    var currentSurveyid = ViewBag.survey_id;
    
     <h4>Survey Header: @ViewBag.surveyTitle</h4>  
     <p></p>
     <h4>Survey Introduction: @ViewBag.surveyIntro</h4>
     <p></p>
     <p></p>
    
<div></div>    
<table>
     <div>
        @Html.ActionLink("Add survey content", "../SurveySections/Create", new { id = ViewBag.survey_id })    OR    @Html.ActionLink("Back to List of Surveys", "Index")
    </div>
    <p></p>
    <tr>
        <th>
            <h4>Sections</h4>
        </th>
        <th>
            <h4>Quesion ID</h4>
        </th>
        <th>
            <h4>Question Text</h4>
        </th>
        <th>
            <h4>Answer Type ID</h4>
        </th>
        <th>
            <h4>Answer Type Name</h4>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    { 
       
        <tr>
             <td>
               @Html.DisplayFor(modelItem => item.section_title)
             </td>
            <td>
                @Html.DisplayFor(modelItem => item.question_id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.question_text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.answer_type_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.answer_type_name)
            </td>
        </tr>
    }
 </table>
}
