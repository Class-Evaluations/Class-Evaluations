@model Survey.Models.QUESTION_MULTIPLE_CHOICE

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>QUESTION_MULTIPLE_CHOICE</legend>

        @Html.HiddenFor(model => model.question_multiple_choice_id)

        <div class="editor-label">
            @Html.LabelFor(model => model.question_id, "QUESTION")
        </div>
        <div class="editor-field">
            @Html.DropDownList("question_id", String.Empty)
            @Html.ValidationMessageFor(model => model.question_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.choice_text)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.choice_text)
            @Html.ValidationMessageFor(model => model.choice_text)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
