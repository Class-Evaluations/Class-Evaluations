@foreach (var item in ViewBag.OnePageOfCourses)
{
    var StatusOfSurvey = "";
    var ExpirationDate = "";
    @*Need to format the date time to a date*@
    var start_date = (item.last_start_datetime == null ? string.Empty : item.last_start_datetime);
    var last_date = (item.last_end_datetime == null ? string.Empty : item.last_end_datetime);

    var Title = "";
    var noSurvey = "";
    Title = @item.ACTIVITY.title + "-" + @item.title;


    foreach (var survey in ViewBag.SurveyStatus)
    {
        if (item.course_id == survey.course_id)
        {
            StatusOfSurvey = survey.course_status1;
            ExpirationDate = survey.survey_exp_date.ToString("MM/dd/yyyy");
        }

    }
    <tr>
        @if (StatusOfSurvey == "")
        {
            <td>
                @Html.ActionLink("Select", "../Person/Details", new { id = item.course_id })
            </td>
        }
        else
        {
            <td>
                <font style="color:blue">
                Survey expires 
                @ExpirationDate</font>
            </td> 
        }
        <td>
            @item.activity_id
        </td>
        
        @if (StatusOfSurvey == "")
        {
            <td>
                @Title
            </td>
        }
        else
        {

            <td><strong> 
                @Html.ActionLink(Title, "AnswerDetails", new { id = item.course_id })
                </strong>
            </td>
        }
        <td>
            @item.course_id
        </td>
        <td>
            @item.barcode_number
        </td>
        <td>
            @start_date
        </td>
        <td>
            @last_date
        </td>
        <td>
            @item.course_status_id   
        </td>
        <td><strong>
            @StatusOfSurvey
            </strong>
        </td>
        <td><strong>
           </strong>
        </td>
    </tr>
}
