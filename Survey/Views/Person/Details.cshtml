@model IEnumerable<Survey.ViewModels.ParticipateData>
                

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


@using (Html.BeginForm("sendWelcome", "Person", FormMethod.Post))
{
     <div class="editor-field">
        @Html.DropDownList("survey_id", ViewBag.survey as SelectList, "Select a survey to send", new { rel = "0", @class = "required" }) 
     </div>
    
     <p></p>
    
     <p></p>
    
  
    <h2>Participant Information</h2>
    
<table>

    <tr>
        <th>
            <h3>Last Name</h3>
        </th>
        <th>
            <h3>First Name</h3>
        </th>
        <th>
            <h3>Participant Email Address</h3>
        </th>
        <th>
            <h3>Account Email Address</h3>
        </th>
        <th>
            <h3>Privacy Flag</h3>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
          <tr>
            @Html.HiddenFor(modelItem => item.course_id)
            <td>
                @Html.DisplayFor(modelItem => item.last_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.first_name)
            </td>
        
            <td>
                @Html.DisplayFor(modelItem => item.email_address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.account_email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email_private)
            </td>
        </tr>
    }
    </table>
    <div>
        <h5>Send emails to the Participants listed below that have email addresses and the private flag is not set.</h5>
        <p></p>
            <input type="button" name="button" title="Preview Email" value="Preview Email" onclick="location.href='@Url.Action("EmailPreview", "Person", new { id = ViewBag.course })'" />
            <input type="submit" name="button" value="Send Emails" />
        <p></p>
    </div>
   
}