@model IEnumerable<Survey.ViewModels.PeopleToManuallyMail>

<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.custom.min.js")" type="text/javascript"></script>

<h2>Email Information</h2>

<h5>Emails successfully sent out = @(ViewBag.EmailCountSent) </h5>

<h5>Participates that did not have an email = @(ViewBag.NoEmailAdddress)</h5>

<h5>Participates that have the email privacy flag set = @(ViewBag.EmailPrivacyFlag)</h5>



<h2>Participates Without Email</h2>
<p></p>

@using (Html.BeginForm("printPDF", "Person", FormMethod.Post))
{
<table>
    <tr>
        <th>
            <strong> Last Name</strong> 
        </th>
        <th>
            <strong>First Name</strong>
        </th>
        <th> 
            <strong>Email Address </strong>
        </th> 
        <th>
            <strong> Email Privacy </strong>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(ModelItem => item.lastName)
        </td>
        <td>
            @Html.DisplayFor(ModelItem => item.firstName)
        </td>
        <td>
            @Html.DisplayFor(ModelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(ModelItem => item.emailPrivate)
        </td>
    </tr>
}
</table>

}
